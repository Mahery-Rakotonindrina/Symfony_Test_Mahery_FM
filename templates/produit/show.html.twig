{% extends 'base.html.twig' %}

{% block title %}Produit N° {{ produit.id }}{% endblock %}

{% block body %}
    <h1>Détail sur le produit N° {{ produit.id }}</h1>

    <table class="table mt-4">
        <tbody>
            <tr>
                <th scope="row">Identifiant</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th scope="row">Nom</th>
                <td>{{ produit.Nom }}</td>
            </tr>
            <tr>
                <th scope="row">Quantité</th>
                <td>{{ produit.Quantite }}</td>
            </tr>
            <tr>
                <th scope="row">Prix</th>
                <td>{{ produit.Prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">Retour</a>

    <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
